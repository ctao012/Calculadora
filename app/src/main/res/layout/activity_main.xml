<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvFormula"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="end"
            android:textColor="@color/signos"
            android:textSize="45sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text=""/>
    <!--  Resultado  -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvResultado"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="end"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintTop_toBottomOf="@+id/tvFormula"/>
    <!--  botones  -->
    <GridLayout
            android:id="@+id/layoutMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="40dp"
            android:columnCount="4"
            android:rowCount="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvResultado">
        <!--  Buttons  -->
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/borrar"
                android:layout_rowWeight="1"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/signos"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/c"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/suma"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/signos"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/suma"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/division"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/signos"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/division"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/siete"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_7"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/ocho"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_8"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/nueve"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_9"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/multiplicacion"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/signos"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/multiplicacion"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/cuatro"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_4"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/cinco"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_5"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/seis"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_6"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/resta"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/signos"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/resta"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/uno"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_1"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/dos"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_2"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tres"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_3"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/igual"
                android:layout_rowWeight="2"
                android:layout_rowSpan="2"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/signos"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/igual"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/cero"
                android:layout_rowWeight="1"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_0"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/punto"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/punto"
                android:textSize="30sp"
                app:cornerRadius="15dp"/>
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>